@model demo.Models.ModelCustomer
@using demo.Models
@{
	ViewBag.Title = "Customer Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Create Customer</h1>

@using (Html.BeginForm("CreateCustomer", "Customer"))
{
	@Html.AntiForgeryToken()
	<div id="page-wrapper">
		<div class="container-fluid">
			<!-- Page Heading -->
			<div class="row">
				<div class="col-lg-12">
					<form>



						<div class="form-group">
							<label for="exampleInputEmail1"> Name</label>
							<input type="text" name="Name" value="@Model.Name" class="form-control" id="exampleInputEmail1" placeholder="Customer Name">
						</div>



						<div class="form-group">
							<label for="exampleInputPassword1">Mobile Number</label>
							<input type="text" name="Mobile_Number" value="@Model.Mobile_Number" class="form-control" id="exampleInputPassword1" placeholder="Contact Number">
						</div>



						<div class="form-group">
							<label for="exampleInputEmail1"> Address </label>
							<input type="text" name="Address" value="@Model.Address" class="form-control" id="exampleInputEmail1" placeholder=" Contact Address ">
						</div>



						<div class="form-group">
							<label>Gender</label>
							<select name="Gender" class="form-control">
								@if (Model.Gender == "Male")
								{
									<option selected value="Male">Male</option>
									<option value="Female">Female</option>
								}
								else if (Model.Gender == "Female")
								{
									
									<option value="Male">Male</option>
									<option selected value="Female">Female</option>

								}

								else
								{
									<option value="Male">Male</option>
									<option value="Female">Female</option>
								}

								
							</select>
						</div>




						




						<div class="form-group">
							<label>Customer Type</label>
							<select name="Customer_Type" class="form-control">

								@if (Model.Customer_Type == "New")
								{
									<option selected value="New">New</option>
									<option  value="Regular">Regular</option>
								}
								else if (Model.Customer_Type == "Regular")
								{
									<option  value="New">New</option>
									<option selected value="Regular">Regular</option>
								}
								else
								{
									<option value="New">New</option>
									<option value="Regular">Regular</option>
								}


							</select>
						</div>






						<div class="form-group">
							<label for="exampleInputPassword1">Age</label>
							<input type="text" name="Age" value="@Model.Age" class="form-control" id="exampleInputPassword1" placeholder="Customer Age">
						</div>

						@*<div class="form-group">
							<label for="exampleInputEmail1"> Customer Service </label>
							<input type="text" name="Service" value="@Model.Service" class="form-control" id="exampleInputEmail1" placeholder=" Customer Service ">
						</div>*@

						<div class="form-group">
							<label for="exampleInputPassword1">Customer_Discount</label>
							<input type="text" name="Customer_Discount" value="@Model.Customer_Discount" class="form-control" id="exampleInputPassword1" placeholder=" Discount">
						</div>
						@*<div class="form-group">
				<label for="exampleInputEmail1"> Customer Type </label>
				<input type="text" name="Customer_Type" value="@Model.Customer_Type" class="form-control" id="exampleInputEmail1" placeholder=" Customer Type ">
			</div>*@


						@Html.HiddenFor(model => model.id)



						<button type="submit" class="btn btn-default">Submit</button>
					</form>
				</div>
			</div>

		</div>

	</div>
}
