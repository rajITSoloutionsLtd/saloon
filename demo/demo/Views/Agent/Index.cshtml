@using demo.Models;
@model List<ModelAgent>
@{
	ViewBag.Title = "Agent";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
	<div class="container-fluid">
		<!-- Page Heading -->
		<div class="row">
			<div class="col-lg-6">

				<a href="/Agent/Create" class="btn btn-primary btn-lg active">New  Agent</a>

			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">
					Agent
				</h1>
				<ol class="breadcrumb">
					<li>
						<i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
					</li>

					<li class="active">
						<i class="fa fa-table"></i> Agent
					</li>
				</ol>
			</div>
		</div>
		<!-- /.row -->
		<div class="row">
			<div class="col-lg-6">
				<h2>Agent Table</h2>
				<div class="table-responsive">
					<table class="table table-bordered table-hover">
						<thead>
							<tr>
								<th>Agent ID</th>
								<th>Agent Name</th>
								<th> Gender</th>
								<th>Mobile Number</th>
								<th>             </th>
							</tr>
						</thead>
						<tbody>
							@for (int i = 0; i < Model.Count(); i++)
							{
								<tr>
									<td>
										@Model[i].id
									</td>
									<td>
										@Model[i].Agent_Name
									</td>

									<td>
										@Model[i].Gender
									</td>

									<td>
										@Model[i].Mobile_Number
									</td>

									<td>
										<a href="/Agent/Create/@Model[i].id"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>

									</td>

									</tr>
							}
</tbody>
					</table>
				</div>
			</div>

		</div>
		<!-- /.row -->
		<!-- /.row -->
	</div>
		<!-- /.container-fluid -->
	</div>


