@using demo.Models;
@model List<TokenModel>
@{
	ViewBag.Title = "Token";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
	<div class="container-fluid">
		<!-- Page Heading -->
		<div class="row">
			<div class="col-lg-6">
			
				<a href="/Token/Create" class="btn btn-primary btn-lg active">New  Token</a>
				
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">
					Token
				</h1>
				<ol class="breadcrumb">
					<li>
						<i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
					</li>
					
					<li class="active">
						<i class="fa fa-table"></i> Token
					</li>
				</ol>
			</div>
		</div>
		<!-- /.row -->
		<div class="row">
			<div class="col-lg-12">
				<h2>Token Table</h2>
				<div class="table-responsive">
					<table class="table table-bordered table-hover">
						<thead>
							<tr>
								<th>Token ID</th>
								<th>Customer Name</th>
								<th>Gender</th>
								<th>Customer Age</th>
							
								<th>Service_Charge</th>
								<th>Discount_ServiceCharge<th>
								<th>Net Total</th>
								<th>Customer ID</th>
								<th>Date Time</th>
							</tr>
						</thead>
						<tbody>

				 @for (int i = 0; i < Model.Count(); i++)
				 {
					<tr>
						<td>
							@Model[i].id
						</td>
						<td>
							@Model[i].Customer_Name
						</td>

						<td>
							@Model[i].Gender
						</td>
						<td>
							@Model[i].age
						</td>
					

						<td>
							@Model[i].Service_Charge
						</td>
					
						<td>
							@Model[i].Discount_ServiceCharge
						</td>

					

						<td>
							@Model[i].NetTotal
						</td>

						<td>
							@Model[i].Customer_ID
						</td>

						<td>
							@Model[i].Date
						</td>

						<td>
							<a href="/Token/Create/@Model[i].id"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>

						</td>

					</tr>
				 }
						</tbody>
					</table>
				</div>
			</div>
			
		</div>
		<!-- /.row -->
	
		<!-- /.row -->
	</div>
	<!-- /.container-fluid -->
</div>